<div class="grid-items">
	<% @cheeses.each do |c| %>
		<a href="<%= cheese_path(c) %>" class="grid-item grid-item-image">
			<% if c.cheeseimg_file_name == nil %>
			<% else %>
				<%= image_tag c.cheeseimg.url(:medium) %>
			<% end %>
			<h1><%= c.name %></h1>
			<p><%= c.producer %></p>
		</a>
	<% end %>
</div>

<br>

<div class="centered">
	<%= button_to "New Cheese", new_cheese_path, method: :get %>
</div>
